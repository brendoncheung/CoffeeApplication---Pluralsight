<Window x:Class="CoffeeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
   
    <Grid>
        <Button HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10" 
                Click="BUttonAddCustomer_Click"
                x:Name="btnAddCustomer"
                Padding="10">

            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/add.png" Height="18" Margin="0 0 8 0"/>
                    <TextBlock Text="Add"/>
                </StackPanel>
            </Button.Content>
            
            
        </Button>
    </Grid>
</Window>
